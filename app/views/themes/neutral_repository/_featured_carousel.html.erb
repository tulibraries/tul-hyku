<div id="featured-carousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @featured_work_list.featured_works.each.with_index(0) do |featured_work, order| %>
      <li data-target="#featured-carousel" data-slide-to="<%= order %>" class="<%= order.zero? ? 'active' : '' %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% @featured_work_list.featured_works.each.with_index(0) do |featured_work, order| %>
      <% work = SolrDocument.find(featured_work.work_id) %>
      <div class="carousel-item <%= order.zero? ? 'active' : '' %>">
        <%= link_to [main_app, work] do %>
          <%= render_thumbnail_tag(work, {suppress_link: true}) %>
        <% end %>
        <div class="carousel-caption">
          <h3 class="carousel-opacity p-10">
            <%= link_to [main_app, work] do %>
              <%= work.title.first %>
            <% end %>
          </h3>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="carousel-control-prev" href="#featured-carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#featured-carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<p>
<% if @presenter.display_share_button? %><%# start share your work button %>
  <div class="home_share_work row text-center">
    <div class="col-sm-12">
      <% if signed_in? %>
        <% if @presenter.create_many_work_types? %>
          <%= link_to '#', class: "btn btn-primary btn-lg", data: { behavior: 'select-work', target: '#worktypes-to-create', 'create-type' => 'single' } do %>
            <i class="fas fa-upload" aria-hidden="true"></i> <%= t('hyrax.share_button') %>
          <% end %>
        <% else # simple link to the first work type %>
          <%= link_to new_polymorphic_path([main_app, @presenter.first_work_type]), class: 'btn btn-primary btn-lg' do %>
            <i class="fas fa-upload" aria-hidden="true"></i> <%= t('hyrax.share_button') %>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to hyrax.my_works_path, class: "btn btn-primary btn-lg" do %>
          <i class="fas fa-upload" aria-hidden="true"></i> <%= t('hyrax.share_button') %>
        <% end %>
      <% end %>
      <%= link_to t(:'hyrax.pages.tabs.terms_page'), hyrax.terms_path %>
    </div>
  </div>
<% end %>
</p>
